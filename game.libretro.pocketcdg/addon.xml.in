<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.pocketcdg"
		name="PocketCDG"
		version="0.0.1.2"
		provider-name="RedBug">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>cdg</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>false</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">PocketCDG git</summary>
		<description lang="en_GB">Supported files: .cdg</description>
		<license>MIT</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.pocketcdg</source>
	</extension>
</addon>
